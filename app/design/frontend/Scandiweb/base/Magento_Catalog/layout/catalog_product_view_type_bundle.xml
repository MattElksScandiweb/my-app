<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="page-product-combined"/>
        <referenceContainer name="content">
            <referenceBlock name="product.info.bundle" remove="true" />
        </referenceContainer>
        <referenceBlock name="root">
            <arguments>
                <argument name="css_class" xsi:type="string">page-product-combined</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>